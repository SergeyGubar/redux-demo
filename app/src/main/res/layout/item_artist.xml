<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textview.MaterialTextView
            tools:text="Serhii Hubar (shubar@nure.ua)"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistNameTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            />


        <TextView
            android:text="@string/average_rating"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_height="wrap_content"
            android:id="@+id/averageRatingTextView"
            app:layout_constraintTop_toBottomOf="@+id/artistNameTextView"
            app:layout_constraintStart_toStartOf="@+id/artistNameTextView"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:text="@string/number_of_ratings"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingsCountTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/averageRatingTextView"
            app:layout_constraintStart_toStartOf="@+id/averageRatingTextView"
            />


        <TextView
            tools:text="4.5 / 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:id="@+id/averageRatingValueTextView"
            app:layout_constraintTop_toTopOf="@+id/averageRatingTextView"
            app:layout_constraintBottom_toBottomOf="@+id/averageRatingTextView"
            app:layout_constraintStart_toEndOf="@+id/averageRatingTextView"
            android:layout_marginStart="8dp"
            />

        <TextView
            tools:text="24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:id="@+id/ratingsCountValueTextView"
            app:layout_constraintTop_toTopOf="@+id/ratingsCountTextView"
            app:layout_constraintBottom_toBottomOf="@+id/ratingsCountTextView"
            app:layout_constraintStart_toEndOf="@+id/ratingsCountTextView"
            android:layout_marginStart="8dp"
            />


        <TextView
            tools:text="Hip-Hop, Rap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:id="@+id/genresTextView"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/artistNameTextView"
            app:layout_constraintBottom_toBottomOf="@+id/artistNameTextView"
            />

        <TextView
            tools:text="Profile description"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profileDescriptionTextView"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingsCountTextView"
            app:layout_constraintStart_toStartOf="@+id/ratingsCountTextView"
            app:layout_constraintEnd_toEndOf="@+id/genresTextView"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
